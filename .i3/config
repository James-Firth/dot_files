# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
# bar
bar {
	status_command i3blocks -c ~/.i3/i3blocks.conf
	#status_command i3status
	colors {
		background $bg-color
	        separator #6F94AA
		#                  border             background         text
		focused_workspace  $focused-bg-color  $focused-bg-color   $text-color
		inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
		urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
	}
}
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (p) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id ~/.i3/scripts/screen_locker.sh, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    bindsym h exec --no-startup-id systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym p exec --no-startup-id systemctl poweroff, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Print mode "$mode_system"
