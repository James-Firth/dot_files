bindsym $mod+Shift+KP_2 exec ~/.i3/scripts/screenlayout/triplets.sh

bindsym $mod+shift+x exec ~/.i3/scripts/screen_locker.sh

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5% && pactl set-sink-mute 1 false && killall -SIGUSR1 i3status #increase sound volume and unmute
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5% && pactl set-sink-mute 1 false && killall -SIGUSR1 i3status #decrease sound volume

