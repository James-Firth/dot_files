# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
# bar
bar {
  position bottom
  tray_output primary
  status_command i3blocks -c ~/.i3/i3blocks.conf
  #status_command i3status
  colors {
    #Info found at i3 userguide section: 5.15. Colors
    background $bg-color
    statusline $text-color # Colour of text in bar.
    separator $separator
    #                  border             background         text
    # Where the mouse is
    focused_workspace  $focused-bg-color  $focused-bg-color  $focused-text-color
    # The workspace that will be active if you move your mouse to that monitor
    active_workspace  $active-bg-color  $focused-bg-color  $inactve-text-color
    # All the other workspaces
    inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
    urgent_workspace   $urgent-bg-color   $urgent-bg-color   $urgent-text-color
  }
}

# Power Menu
set $power_menu System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (p) shutdown
mode "$power_menu" {
    bindsym l exec --no-startup-id ~/.i3/scripts/screen_locker.sh, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    bindsym h exec --no-startup-id systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym p exec --no-startup-id systemctl poweroff, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+shift+p mode "$power_menu"

# Display Menu
set $display_menu System (d) docked default, (w) docked wide (l) laptop layout (h) home (r) reading
mode "$display_menu" {
    bindsym d exec --no-startup-id ~/.i3/scripts/screenlayout/triple_portrait.sh, mode "default"
    bindsym w exec --no-startup-id ~/.i3/scripts/screenlayout/triple_landscape.sh, mode "default"
    bindsym l exec --no-startup-id ~/.i3/scripts/screenlayout/laptop.sh, mode "default"
    bindsym h exec --no-startup-id ~/.i3/scripts/screenlayout/home_2_monitors.sh, mode "default"
    bindsym r exec --no-startup-id ~/.i3/scripts/screenlayout/triple_monitor_double_portrait.sh, mode "default"
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+shift+d mode "$display_menu"

