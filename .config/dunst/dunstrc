[global]
    #font = "Droid Sans 8"
    font = "System San Francisco 8"
    allow_markup = yes
    format = "<b>%s</b>\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = center
    bounce_freq = 1
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    #geometry = "200x5-6+30" #topright corner

    # the geometry of the window
    # geometry [{width}]x{height}][+/-{x}+/-{y}]
    # The geometry of the message window.
    # The height is measured in number of notifications everything else in pixels. If the width
    # is omitted but the height is given ("-geometry x2"), the message window
    # expands over the whole screen (dmenu-like). If width is 0,
    # the window expands to the longest message displayed.
    # A positive x is measured from the left, a negative from the
    # right side of the screen.  Y is measured from the top and down respectevly.
    # The width can be negative. In this case the actual width is the
    # screen width minus the width defined in within the geometry option.
    geometry = "200x5-900+10" #Middle of screen for my setup
    transparency = 0
    idle_threshold = 120
    monitor = 0
    follow = mouse
    sticky_history = yes
    line_height = 0
    separator_height = 2
    padding = 8
    horizontal_padding = 8
    separator_color = "#585858"
    startup_notification = true
    # https://github.com/knopwob/dunst/issues/26#issuecomment-36159395
    icon_position = left
    icon_folders = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/:/usr/share/icons/gnome/32x32
    #icon_folders = /usr/share/icons/elementary/actions/16/

[frame]
    width = 1
    #color = "#383838"
    color = "#2f343f"

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    # Was breaking other hotkeys. Left in case I want it later.
    # history = ctrl+grave
    # context = ctrl+shift+period

[urgency_low]
    background = "#2f343f"
    foreground = "#676E7D"
    timeout = 5

[urgency_normal]
    background = "#2f343f"
    foreground = "#f3f4f5"
    timeout = 20

[urgency_critical]
